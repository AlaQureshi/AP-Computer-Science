import java.util.Scanner;
class Main { 
public static void main(String[] args) {
  Scanner user_input = new Scanner(System.in);
  String intro;
  System.out.println("Ala's Pizzeria where something delicious is always cooking. Will your order be delivery or pickup?");
  intro = user_input.next();

  String phone;
  System.out.println("What is your phone number sir/maam?");
  phone = user_input.next();

  String size;
  System.out.println("What size pizza would you like?");
  size = user_input.next();

  String toppings;
  System.out.println("What kind of toppings would you like on your pizza?");
  toppings = user_input.next();

  System.out.println("To recap your order you will like to do " + intro + " and your phone number is " + phone + " and the pizza you would like is " + size + " with " + toppings);

  String finalAnswer;
  System.out.println("Anything else?");
  finalAnswer = user_input.next();

  System.out.println("Alright, your pizza will be ready in 20 minutes see you then.");  


}

} 